<div class="container">
  <% user = User.find(@appointment.user_id) %>
  <h1><%= user.first_name.capitalize %>: <%=@appointment.name.split.map(&:capitalize).join(' ') %></h1>
  <h2>Today's Date: <%= Time.now.strftime(" %A, %b %e %l:%M %p")  %></h2>
  <div class="card">
    <h5 class="card-header">
      <%=@appointment.name.split.map(&:capitalize).join(' ') %>
    </h5>
    <div class="card-body">
      <h5 class="card-title"> <%="#{@appointment.start_time.strftime("%b %e, %l:%M %p")}" %>
      </h5>
      <p class="card-text"><%= "#{@appointment.description}" %></p>
      <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        View on Map
      </a>
    </div>
  </div>
  <div class="collapse" id="collapseExample">
    <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-marker-value="<%= @marker.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
