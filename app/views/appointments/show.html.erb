<div class="container">
  <% user = User.find(@appointment.user_id) %>
  <h1><%= user.first_name.capitalize %>: <%=@appointment.name.split.map(&:capitalize).join(' ') %></h1>
  <h2>Today's Date: <%= Time.now.strftime(" %A, %b %e %l:%M %p")  %></h2>
  <div class="col-12 col-lg-4 m-3 rounded p-0" style="background-color: #8ECAE6;">
    <div class="align-items-center justify-content-end p-3 text-decoration-none text-black">
      <p class="fs-3 text-black m-0 p-3">Details</p>
      <p class="fs-3 text-black m-0 p-3">Time: <%="#{@appointment.start_time.strftime("%b %e, %l:%M %p")}" %></p>
      <p class="fs-3 text-black m-0 p-3">Description: <%="#{@appointment.description}" %></p>
    </div>
  </div>
  <h2>View on Map</h2>
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-marker-value="<%= @marker.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
