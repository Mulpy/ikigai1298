<h2>Create New Appointments</h2>
<%= simple_form_for [@support, @appointment] do |f| %>
  <%= f.input :name, placeholder: 'Medical Check-up' %>
  <%= f.input :description, placeholder: 'What is the appointment about?'%>
  <div data-controller="datepicker">
    <%= f.input :start_time,
          as: :string,
          label: 'Date',
          input_html: { data: { datepicker_target: "datePickerStart"}, placeholder: 'click me'} %>
  </div>
  <%= f.input :address %>
  <div class="d-flex mt-4 mb-3">
    <div>
      <%= link_to "Go Back", support_path(@support), class:'btn btn-outline-info btn-block' %>
    </div>
    <div class="ms-3">
      <%= f.submit "Create", class:'btn btn-info btn-block' %>
    </div>
  </div>
<% end %>
