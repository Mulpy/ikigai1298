<h2>New health Record</h2>
<%= simple_form_for [@support, @health_record] do |f| %>
  <%= f.input :mood_status,
              placeholder: 'Naproxen',
              label: "How do you feel today?" %>
  <%= f.input :photo, as: :file %>
  <div class="d-flex mt-4 mb-3">
    <%= link_to "Go Back", support_path(@support), class:'btn btn-outline-info btn-block mt-2 go-back-btn' %>
    <%= f.submit "Submit", class:'btn btn-info btn-block mt-2 mx-3' %>
  </div>
<% end %>
