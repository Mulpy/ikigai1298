<h2>Create New Medicine</h2>
<%= simple_form_for [@support, @medicine] do |f| %>
  <%= f.input :name, placeholder: 'Naproxen' %>
  <%= f.input :description, placeholder: 'What is the medicine about?' %>
  <%= f.input :dosage,
              label: "Dosage",
              input_html: { min: 0 } %>
  <%= f.input :dosage_remaining,
              label: "Remaining amount",
              input_html: { min: 0 } %>
  <%= f.input :unit, collection: [ "g", "ml", "tablet"],
              selected: "g",
              class: "form-control",
              data: { controller: "unit-sync", target: "unit-sync.unit" } %>
  <%= f.input :unit_alt, collection: [ "g", "ml", "tablet"],
              selected: "g",
              class: "form-control",
              data: { controller: "unit-sync", target: "unit-sync.unit-alt" } %>
  <%= f.input :start_date,
              as: :date,
              start_year: Date.today.year,
              end_year: Date.today.year + 10 %>
  <%= f.input :end_date, as: :date,
              as: :date,
              start_year: Date.today.year,
              end_year: Date.today.year + 10 %>
  <%= f.input :frequency, placeholder: "3 times in a day" %>
  <%= f.input :photo, as: :file %>
  <div class="d-flex justify-content-center mt-4 mb-3">
    <%= link_to "Go Back", support_path(@support), class:'btn btn-outline-info btn-block mt-2 go-back-btn mx-3' %>
    <%= f.submit "Set reminder", class:'btn btn-info btn-block mt-2 mx-3' %>
  </div>
<% end %>
