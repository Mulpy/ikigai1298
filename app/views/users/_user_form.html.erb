<%= simple_form_for @user do |f| %>
  <div class="mb-2">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="mb-2">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="mb-2">
    <%= f.label :gender %>
    <%= f.select :gender, options_for_select([['Male', 'male'], ['Female', 'female'], ['Other', 'other']]) %>
  </div>
  <div class="mb-2">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="mb-2">
    <%= f.label :phone_number %>
    <%= f.number_field :phone_number, as: :tel %>
  </div>
  <div class="mb-2">
    <%= f.label :email %>
    <%= f.email_field :email, as: :email %>
  </div>
  <div class="mb-2">
    <%= f.label :height %>
    <%= f.text_field :height %>
  </div>
  <div class="mb-2">
    <%= f.label :birth_date %>
    <%= f.date_field :birth_date, as: :date %>
  </div>
  <div class="mb-2">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="mb-2">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="mb-2">
    <%= f.input :photo %>
  </div>
  <%= f.submit "Save Changes", class: "btn btn-primary" %>
<% end %>
